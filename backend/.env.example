# Environment variables
PORT=3000
NODE_ENV=development

# Database (optional - for user auth features)
DATABASE_URL=postgresql://user:password@db:5432/candidly
JWT_ACCESS_SECRET=your_access_secret_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_min_32_chars_different
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AI Provider API Keys (at least one required)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Transcription Service (required for audio)
DEEPGRAM_API_KEY=

# OCR Service (optional - for Google Cloud Vision)
GOOGLE_VISION_API_KEY=

# Code Execution (optional)
JUDGE0_API_KEY=

# AWS Configuration (optional - for storage service)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
